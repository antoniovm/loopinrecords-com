@import "values"


ul
    li
        padding-left 0.5em
    
ul.contact
    list-style none
    padding 0
    
    > li
        padding 0
        margin 1.5em 0 0 0
    
        &:first-child
            margin-top 0
            
ul.icons 
    cursor default
    list-style none
    padding-left 0
    
.split

    .split
        > :nth-child(2n)
            padding-left 2.5em
    
    .style1 
        > :nth-child(2n)
            width: calc(33.33333% - 2.5em)

//- ------------------------1680px------------------------
@media screen and (max-width: 1680px)
    .split
        .split 
            > :nth-child(2n)
                padding-left 2em
    
        .style1 
            > :nth-child(2n)
                width calc(33.33333% - 2em)

//- ------------------------980px------------------------
@media screen and (max-width: 980px)
    .split 
        > * 
            border-top solid 1px rgba(255, 255, 255, 0.15)
            margin 4em 0 0 0
            padding 4em 0 0 0
            width 100% !important
            
//- ------------------------736px------------------------
@media screen and (max-width: 736px)
    .split 
        > * 
            margin 3em 0 0 0
            padding 3em 0 0 0
                    