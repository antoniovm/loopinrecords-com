@import "values"
    
.wrapper.style1-alt
    background-color footer-bg-color
    
#footer 
    > .inner
        .menu 
            font-size 0.8em
            color rgba(255, 255, 255, 0.15)
            

ul.menu
        list-style none
        padding 0
        
        > li
            border-left solid 1px rgba(255, 255, 255, 0.15)
            display inline-block
            line-height 1
            margin-left 1.5em
            padding 0 0 0 1.5em
        
            &:first-child
                border-left 0
                margin 0
                padding-left 0

