@import "values"

#intro
    background-attachment fixed
    background-position top right
    background-repeat no-repeat
    background-size 100% 100%

    h1
        font-size 5em
    
    p 
        font-size 1.25em

//- ------------------------1280px------------------------
@media screen and (max-width: 1280px)
    #intro
        background-attachment scroll
        
//- ------------------------736px------------------------
@media screen and (max-width: 736px)
    #intro p 
        font-size 1em
    